<% content_for :title, "Admin Oplog ##{@admin_oplog.id}" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_admin_oplogs_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Logs
      <% end %>
    </div>

    <div class="mt-4">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Admin Operation Log #<%= @admin_oplog.id %></h1>
    </div>

    <div class="mt-4">
      <div class="<%= action_badge_class(@admin_oplog.action) %> text-base px-3 py-1">
        <%= @admin_oplog.action_label %>
      </div>
    </div>
  </div>

  <!-- Admin oplog Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <!-- Main Information -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-6">
          <!-- Administrator -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Administrator
            </label>
            <div>
              <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                <%= @admin_oplog.administrator.name %>
              </div>
              <div class="text-xs text-gray-500 dark:text-gray-400">
                <%= @admin_oplog.administrator.role_name %>
              </div>
            </div>
          </div>

          <!-- Resource -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Resource
            </label>
            <% if @admin_oplog.resource_type.present? %>
              <div class="text-sm text-gray-900 dark:text-gray-100">
                <span class="font-medium"><%= @admin_oplog.resource_type %></span>
                <% if @admin_oplog.resource_id.present? %>
                  <span class="text-gray-500 dark:text-gray-400">#<%= @admin_oplog.resource_id %></span>
                <% end %>
              </div>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">No specific resource</span>
            <% end %>
          </div>

          <!-- Time -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Time
            </label>
            <div class="font-mono text-sm">
              <div class="text-gray-900 dark:text-gray-100"><%= @admin_oplog.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
              <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                <%= time_ago_in_words(@admin_oplog.created_at) %> ago
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <!-- IP Address -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              IP Address
            </label>
            <div class="font-mono text-sm"><%= @admin_oplog.ip_address %></div>
          </div>

          <!-- User Agent -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Browser
            </label>
            <div class="space-y-2">
              <div class="font-medium"><%= @admin_oplog.short_user_agent %></div>
              <details class="bg-gray-100 dark:bg-gray-800 rounded-lg">
                <summary class="cursor-pointer p-3 text-xs font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors">
                  Full User Agent
                </summary>
                <div class="p-3 border-t border-gray-200 dark:border-gray-700">
                  <div class="text-xs font-mono break-all text-gray-900 dark:text-gray-100">
                    <%= @admin_oplog.user_agent %>
                  </div>
                </div>
              </details>
            </div>
          </div>
        </div>
      </div>

      <!-- Details Section -->
      <% if @admin_oplog.details.present? %>
        <div class="border-t border-gray-200 my-6 pt-6">
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Details
            </label>
            <div class="bg-gray-900 text-gray-100 rounded-lg p-4 font-mono text-sm overflow-x-auto">
              <pre><%= JSON.pretty_generate(JSON.parse(@admin_oplog.details)) rescue @admin_oplog.details %></pre>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>