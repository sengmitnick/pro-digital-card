<% content_for :title, "Edit Administrator" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_administrator_path(@administrator.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Administrator
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900">Edit Administrator</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @administrator], local: true, class: "space-y-6" do |form| %>
        <!-- Error Messages -->
        <% if @administrator.errors.any? %>
          <div class="bg-red-100 text-red-800 p-4 rounded-lg border border-red-200">
            <div class="flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-medium">Please fix the following errors:</h3>
                <ul class="list-disc list-inside mt-2">
                  <% @administrator.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            Name<% if field_required?(@administrator, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
          }.merge(field_required?(@administrator, :name) ? { required: true } : {}) %>
          <% if @administrator.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Password -->
        <div class="mb-4">
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            New Password <small class="text-gray-500">(leave blank to keep current)</small>
          <% end %>
          <%= form.password_field :password, {
            placeholder: "Enter new password...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
          } %>
          <% if @administrator.errors[:password].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:password].first %></p>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div class="mb-4">
          <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            Password Confirmation
          <% end %>
          <%= form.password_field :password_confirmation, {
            placeholder: "Confirm new password...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
          } %>
          <% if @administrator.errors[:password_confirmation].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:password_confirmation].first %></p>
          <% end %>
        </div>

        <!-- Role (only for super admins) -->
        <% if current_admin.can_manage_administrators? %>
          <div class="mb-4">
            <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Role <span class="text-red-500">*</span>
            <% end %>
            <%= form.select :role, Administrator.role_options, { selected: @administrator.role }, {
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500",
              required: true
            } %>
            <% if @administrator.errors[:role].any? %>
              <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:role].first %></p>
            <% end %>
          </div>
        <% end %>

        <!-- Metadata -->
        <div class="border-t pt-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Created At</label>
              <p class="text-sm text-gray-900"><%= @administrator.created_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Last Updated</label>
              <p class="text-sm text-gray-900"><%= @administrator.updated_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_administrator_path(@administrator.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Administrator", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>