<% content_for :title, "New Administrator" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_administrators_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Administrators
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Administrator</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @administrator], local: true, class: "space-y-6" do |form| %>
        <!-- Error Messages -->
        <%= render 'shared/form_error_message', model: @administrator %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@administrator, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@administrator, :name) ? { required: true } : {}) %>
          <% if @administrator.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Password -->
        <div class="mb-4">
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Password<% if field_required?(@administrator, :password) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.password_field :password, {
            placeholder: "Enter password...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@administrator, :password) ? { required: true } : {}) %>
          <% if @administrator.errors[:password].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:password].first %></p>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div class="mb-4">
          <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Password Confirmation<% if field_required?(@administrator, :password_confirmation) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.password_field :password_confirmation, {
            placeholder: "Confirm password...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50",
            required: true
          } %>
          <% if @administrator.errors[:password_confirmation].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:password_confirmation].first %></p>
          <% end %>
        </div>

        <!-- Role (only for super admins) -->
        <% if current_admin.can_manage_administrators? %>
          <div class="mb-4">
            <%= form.label :role, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
              Role <span class="text-red-500">*</span>
            <% end %>
            <%= form.select :role, Administrator.role_options, { selected: @administrator.role || 'admin' }, {
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50",
              required: true
            } %>
            <% if @administrator.errors[:role].any? %>
              <p class="text-sm text-red-500 mt-1"><%= @administrator.errors[:role].first %></p>
            <% end %>
          </div>
        <% end %>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_administrators_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Administrator", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
