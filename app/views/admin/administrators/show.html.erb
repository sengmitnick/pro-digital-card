<% content_for :title, @administrator.name %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_administrators_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Administrators
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900"><%= @administrator.name %></h1>

      <div class="flex items-center space-x-3">
        <% if current_admin.can_manage_administrators? %>
          <%= link_to edit_admin_administrator_path(@administrator.id), class: "btn-primary" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
          <% end %>

          <% if @administrator.id != current_admin.id %>
            <%= link_to admin_administrator_path(@administrator.id),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this administrator?" },
                class: "btn-danger" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete
            <% end %>
          <% else %>
            <div class="relative group">
              <button class="btn-danger opacity-50 cursor-not-allowed" disabled>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
              </button>
              <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-1 bg-gray-900 text-gray-50 text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">
                Cannot delete yourself
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Administrator Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900"><%= @administrator.name %></div>
        </div>

        <!-- Role -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Role</label>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @administrator.super_admin? ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %>">
            <%= @administrator.role_name %>
          </span>
        </div>

        <!-- Created -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Created</label>
          <div class="text-sm text-gray-600">
            <%= @administrator.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            <span class="text-gray-400">(<%= time_ago_in_words(@administrator.created_at) %> ago)</span>
          </div>
        </div>

        <!-- Last Updated -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Last Updated</label>
          <div class="text-sm text-gray-600">
            <%= @administrator.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            <span class="text-gray-400">(<%= time_ago_in_words(@administrator.updated_at) %> ago)</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
