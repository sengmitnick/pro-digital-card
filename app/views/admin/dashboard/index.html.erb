<% content_for :title, "Dashboard" %>

<div class="container-xl">
  <!-- Page Title -->
  <div class="mb-4">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Admin Dashboard</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">System overview and quick actions</p>
  </div>

  <!-- Stats and Quick Actions -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Administrators Count -->
    <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
      <div class="card-body flex items-center justify-center min-h-[120px]">
        <div class="flex items-center w-full">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Administrators</div>
            <div class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @admin_count %></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="lg:col-span-2">
      <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
        <div class="card-header bg-gray-100 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-50">Quick Actions</h3>
        </div>
        <div class="card-body">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
            <%= link_to new_admin_administrator_path, class: "flex items-center justify-center p-4 bg-green-50 dark:bg-green-900/20 hover:bg-green-100 dark:hover:bg-green-900/30 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 text-green-600 dark:text-green-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span class="text-sm font-medium text-green-700 dark:text-green-300">New Admin</span>
            <% end %>

            <%= link_to admin_admin_oplogs_path, class: "flex items-center justify-center p-4 bg-blue-50 dark:bg-blue-900/20 hover:bg-blue-100 dark:hover:bg-blue-900/30 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-medium text-blue-700 dark:text-blue-300">View All Logs</span>
            <% end %>

            <%= link_to edit_admin_account_path, class: "flex items-center justify-center p-4 bg-orange-50 dark:bg-orange-900/20 hover:bg-orange-100 dark:hover:bg-orange-900/30 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 text-orange-600 dark:text-orange-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-2a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-medium text-orange-700 dark:text-orange-300">Change Password</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Admin Logs -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-header bg-gray-100 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-50">Recent Admin Actions</h3>
        <%= link_to admin_admin_oplogs_path, class: "text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300" do %>
          View all â†’
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <% if @recent_logs.any? %>
        <div class="space-y-4">
          <% @recent_logs.each do |log| %>
            <div class="flex items-center justify-between py-3 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
                    <% case log.action %>
                    <% when 'create' %>
                      <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                      </svg>
                    <% when 'update' %>
                      <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                      </svg>
                    <% when 'destroy' %>
                      <svg class="w-4 h-4 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"/>
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="w-4 h-4 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900 dark:text-gray-50">
                    <%= log.administrator.name %>
                    <span class="text-gray-600 dark:text-gray-400">
                      <%= log.action_label %>
                      <% if log.resource_type.present? %>
                        <%= log.resource_type.humanize.downcase %>
                      <% end %>
                    </span>
                  </div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">
                    <%= time_ago_in_words(log.created_at) %> ago
                  </div>
                </div>
              </div>
              <div class="text-xs text-gray-500 dark:text-gray-400">
                <%= log.created_at.strftime("%m/%d %H:%M") %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <p class="text-gray-500 dark:text-gray-400 text-sm">No recent admin actions</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
