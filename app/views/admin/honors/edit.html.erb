<% content_for :title, "Edit Honor" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_honor_path(@honor.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Honor
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit Honor</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @honor], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @honor %>

        <!-- Title -->
        <div class="mb-4">
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Title<% if field_required?(@honor, :title) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :title, {
            placeholder: "Enter title...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@honor, :title) ? { required: true } : {}) %>
          <% if @honor.errors[:title].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @honor.errors[:title].first %></p>
          <% end %>
        </div>

        <!-- Organization -->
        <div class="mb-4">
          <%= form.label :organization, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Organization<% if field_required?(@honor, :organization) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :organization, {
            placeholder: "Enter organization...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@honor, :organization) ? { required: true } : {}) %>
          <% if @honor.errors[:organization].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @honor.errors[:organization].first %></p>
          <% end %>
        </div>

        <!-- Date -->
        <div class="mb-4">
          <%= form.label :date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Date<% if field_required?(@honor, :date) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :date, {
            placeholder: "Enter date...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@honor, :date) ? { required: true } : {}) %>
          <% if @honor.errors[:date].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @honor.errors[:date].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@honor, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@honor, :description) ? { required: true } : {}) %>
          <% if @honor.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @honor.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Icon name -->
        <div class="mb-4">
          <%= form.label :icon_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Icon name<% if field_required?(@honor, :icon_name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :icon_name, {
            placeholder: "Enter icon name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@honor, :icon_name) ? { required: true } : {}) %>
          <% if @honor.errors[:icon_name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @honor.errors[:icon_name].first %></p>
          <% end %>
        </div>

        <!-- Profile -->
        <div class="mb-4">
          <%= form.label :profile_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Profile<% if field_required?(@honor, :profile) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :profile_id, 
              options_for_select([['Select Profile', '']] + Profile.all.map { |item| [item.id, item.id] }, @honor.profile_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @honor.errors[:profile_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @honor.errors[:profile_id].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_honor_path(@honor.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Honor", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>