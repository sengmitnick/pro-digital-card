<div class="container mx-auto px-4 py-8">
  <div class="mb-6 flex flex-col gap-4">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-on-surface"><%= @organization.name %> - 成员管理</h1>
      <button 
        type="button"
        class="btn-primary"
        data-controller="team-invite"
        data-action="click->team-invite#generateInvite"
        data-team-invite-org-name-value="<%= @organization.name %>"
        data-team-invite-invite-token-value="<%= @organization.invite_token %>"
        title="生成邀请链接">
        <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
        </svg>
        邀请成员
      </button>
    </div>
    
    <!-- Category Filter & Quick Links -->
    <div class="flex flex-wrap gap-3 items-center">
      <span class="text-sm font-medium text-on-surface">筛选类别：</span>
      <%= link_to '全部', members_admin_organization_path, 
          class: "btn-sm #{params[:category].blank? && params[:status].blank? ? 'btn-primary' : 'btn-outline'}" %>
      <% Profile::MEMBER_CATEGORIES.each do |category| %>
        <%= link_to category, members_admin_organization_path(category: category), 
            class: "btn-sm #{params[:category] == category ? 'btn-primary' : 'btn-outline'}" %>
      <% end %>
      <%= link_to '未分类', members_admin_organization_path(status: 'uncategorized'), 
          class: "btn-sm #{params[:status] == 'uncategorized' ? 'btn-warning' : 'btn-outline'}" %>
      <span class="mx-2 text-muted">|</span>
      <%= link_to admin_member_categories_path, class: "text-primary hover:text-primary-dark underline text-sm" do %>
        <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        管理类别
      <% end %>
    </div>
  </div>

  <!-- Pending Members -->
  <div class="card mb-8">
    <div class="card-header">
      <h2 class="text-xl font-semibold text-on-surface">待审核成员 (<%= @pending_profiles.total_count %>)</h2>
    </div>
    <div class="card-body">
      <% if @pending_profiles.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-border">
                <th class="text-left p-4 text-on-surface-variant">头像</th>
                <th class="text-left p-4 text-on-surface-variant">姓名</th>
                <th class="text-left p-4 text-on-surface-variant">职位</th>
                <th class="text-left p-4 text-on-surface-variant">成员类别</th>
                <th class="text-left p-4 text-on-surface-variant">邮箱</th>
                <th class="text-left p-4 text-on-surface-variant">申请时间</th>
                <th class="text-right p-4 text-on-surface-variant">操作</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_profiles.each do |profile| %>
                <tr class="border-b border-border hover:bg-surface-variant/10">
                  <td class="p-4">
                    <% if profile.avatar.attached? %>
                      <%= image_tag profile.avatar, class: 'w-12 h-12 rounded-full object-cover' %>
                    <% else %>
                      <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="text-primary font-semibold"><%= profile.full_name[0] %></span>
                      </div>
                    <% end %>
                  </td>
                  <td class="p-4 text-on-surface"><%= profile.full_name %></td>
                  <td class="p-4 text-on-surface"><%= profile.title %></td>
                  <td class="p-4">
                    <% if profile.member_category.present? %>
                      <span class="badge-primary"><%= profile.member_category %></span>
                    <% else %>
                      <span class="badge-secondary text-muted">未设置</span>
                    <% end %>
                  </td>
                  <td class="p-4 text-on-surface"><%= profile.email %></td>
                  <td class="p-4 text-on-surface-variant"><%= profile.created_at.strftime('%Y-%m-%d') %></td>
                  <td class="p-4 text-right">
                    <div class="flex justify-end gap-2">
                      <%= button_to '通过', approve_member_admin_organization_path(@organization, profile_id: profile.id), 
                          method: :post, class: 'btn-primary btn-sm' %>
                      <%= button_to '拒绝', reject_member_admin_organization_path(@organization, profile_id: profile.id), 
                          method: :post, class: 'btn-error btn-sm', 
                          data: { confirm: '确定要拒绝该成员吗？' } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="mt-4">
          <%= paginate @pending_profiles, param_name: :pending_page %>
        </div>
      <% else %>
        <p class="text-on-surface-variant text-center py-8">暂无待审核成员</p>
      <% end %>
    </div>
  </div>

  <!-- Add User Form -->
  <div class="card mb-8">
    <div class="card-header">
      <h2 class="text-xl font-semibold text-on-surface">添加已注册用户</h2>
    </div>
    <div class="card-body">
      <%= form_with url: add_user_admin_organization_path(@organization), method: :post, class: "flex gap-4 items-end" do |f| %>
        <div class="flex-1">
          <%= f.label :email, '用户邮箱', class: 'block text-sm font-medium text-on-surface mb-2' %>
          <%= f.email_field :email, 
              placeholder: '请输入用户邮箱，例如：user@example.com',
              class: 'form-input w-full',
              required: true %>
        </div>
        <%= f.submit '添加到已批准成员', class: 'btn-primary' %>
      <% end %>
    </div>
  </div>

  <!-- Approved Members -->
  <div class="card mb-8">
    <div class="card-header">
      <h2 class="text-xl font-semibold text-on-surface">已批准成员 (<%= @approved_profiles.total_count %>)</h2>
    </div>
    <div class="card-body">
      <% if @approved_profiles.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-border">
                <th class="text-left p-4 text-on-surface-variant">头像</th>
                <th class="text-left p-4 text-on-surface-variant">姓名</th>
                <th class="text-left p-4 text-on-surface-variant">职位</th>
                <th class="text-left p-4 text-on-surface-variant">成员类别</th>
                <th class="text-left p-4 text-on-surface-variant">邮箱</th>
                <th class="text-left p-4 text-on-surface-variant">批准时间</th>
                <th class="text-right p-4 text-on-surface-variant">操作</th>
              </tr>
            </thead>
            <tbody>
              <% @approved_profiles.each do |profile| %>
                <tr class="border-b border-border hover:bg-surface-variant/10">
                  <td class="p-4">
                    <% if profile.avatar.attached? %>
                      <%= image_tag profile.avatar, class: 'w-12 h-12 rounded-full object-cover' %>
                    <% else %>
                      <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                        <span class="text-primary font-semibold"><%= profile.full_name[0] %></span>
                      </div>
                    <% end %>
                  </td>
                  <td class="p-4 text-on-surface"><%= profile.full_name %></td>
                  <td class="p-4 text-on-surface"><%= profile.title %></td>
                  <td class="p-4">
                    <% if profile.member_category.present? %>
                      <span class="badge-primary"><%= profile.member_category %></span>
                    <% else %>
                      <span class="badge-secondary text-muted">未设置</span>
                    <% end %>
                  </td>
                  <td class="p-4 text-on-surface"><%= profile.email %></td>
                  <td class="p-4 text-on-surface-variant"><%= profile.updated_at.strftime('%Y-%m-%d') %></td>
                  <td class="p-4 text-right">
                    <div class="flex justify-end gap-2">
                      <%= link_to '查看名片', card_path(profile.slug), target: (Rails.env.production? ? '_blank' : nil), class: 'btn-secondary btn-sm' %>
                      <%= button_to '重新发送邮件', resend_email_member_admin_organization_path(@organization, profile_id: profile.id), 
                          method: :post, class: 'btn-warning btn-sm', 
                          title: '重新发送审核通过邮件' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="mt-4">
          <%= paginate @approved_profiles, param_name: :approved_page %>
        </div>
      <% else %>
        <p class="text-on-surface-variant text-center py-8">暂无已批准成员</p>
      <% end %>
    </div>
  </div>

  <!-- Rejected Members -->
  <div class="card">
    <div class="card-header">
      <h2 class="text-xl font-semibold text-on-surface">已拒绝成员 (<%= @rejected_profiles.total_count %>)</h2>
    </div>
    <div class="card-body">
      <% if @rejected_profiles.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-border">
                <th class="text-left p-4 text-on-surface-variant">头像</th>
                <th class="text-left p-4 text-on-surface-variant">姓名</th>
                <th class="text-left p-4 text-on-surface-variant">职位</th>
                <th class="text-left p-4 text-on-surface-variant">成员类别</th>
                <th class="text-left p-4 text-on-surface-variant">邮箱</th>
                <th class="text-left p-4 text-on-surface-variant">拒绝时间</th>
                <th class="text-right p-4 text-on-surface-variant">操作</th>
              </tr>
            </thead>
            <tbody>
              <% @rejected_profiles.each do |profile| %>
                <tr class="border-b border-border hover:bg-surface-variant/10">
                  <td class="p-4">
                    <% if profile.avatar.attached? %>
                      <%= image_tag profile.avatar, class: 'w-12 h-12 rounded-full object-cover' %>
                    <% else %>
                      <div class="w-12 h-12 rounded-full bg-error/20 flex items-center justify-center">
                        <span class="text-error font-semibold"><%= profile.full_name[0] %></span>
                      </div>
                    <% end %>
                  </td>
                  <td class="p-4 text-on-surface"><%= profile.full_name %></td>
                  <td class="p-4 text-on-surface"><%= profile.title %></td>
                  <td class="p-4">
                    <% if profile.member_category.present? %>
                      <span class="badge-primary"><%= profile.member_category %></span>
                    <% else %>
                      <span class="badge-secondary text-muted">未设置</span>
                    <% end %>
                  </td>
                  <td class="p-4 text-on-surface"><%= profile.email %></td>
                  <td class="p-4 text-on-surface-variant"><%= profile.updated_at.strftime('%Y-%m-%d') %></td>
                  <td class="p-4 text-right">
                    <div class="flex justify-end gap-2">
                      <%= button_to '重新审核', reactivate_member_admin_organization_path(@organization, profile_id: profile.id), 
                          method: :post, class: 'btn-warning btn-sm' %>
                      <%= button_to '永久删除', destroy_member_admin_organization_path(@organization, profile_id: profile.id), 
                          method: :delete, class: 'btn-error btn-sm', 
                          data: { confirm: '确定要永久删除该成员吗？此操作不可恢复！' } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="mt-4">
          <%= paginate @rejected_profiles, param_name: :rejected_page %>
        </div>
      <% else %>
        <p class="text-on-surface-variant text-center py-8">暂无已拒绝成员</p>
      <% end %>
    </div>
  </div>
</div>
