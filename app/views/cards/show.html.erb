<div class="min-h-screen bg-surface"
     data-controller="wechat-share"
     data-wechat-share-title-value="<%= @profile.full_name %> - <%= @profile.title %>"
     data-wechat-share-desc-value="<%= @profile.bio&.truncate(100) || '专业名片分享' %>"
     data-wechat-share-link-value="<%= request.original_url %>"
     data-wechat-share-img-url-value="<%= @share_image_url %>">
  <!-- Hero Section with Professional Identity -->
  <section class="bg-gradient-to-br from-primary via-primary-dark to-secondary py-16 lg:py-24">
    <div class="container-lg mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <!-- Avatar and Basic Info -->
        <div class="flex-shrink-0">
          <div class="avatar avatar-xl border-4 border-white shadow-xl">
            <% if @profile.avatar.attached? %>
              <%= image_tag @profile.avatar, alt: @profile.full_name, class: "w-full h-full object-cover" %>
            <% elsif @profile.avatar_url.present? %>
              <img src="<%= @profile.avatar_url %>" 
                   alt="<%= @profile.full_name %>" 
                   class="w-full h-full object-cover">
            <% else %>
              <div class="w-full h-full bg-white/20 flex items-center justify-center text-white text-4xl font-bold">
                <%= @profile.full_name.first %>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Professional Details -->
        <div class="flex-1 text-center lg:text-left">
          <h1 class="text-4xl lg:text-5xl font-bold text-white mb-2"><%= @profile.full_name %></h1>
          <p class="text-xl text-white/90 mb-4"><%= @profile.title %><% if @profile.company.present? %> · <%= @profile.company %><% end %></p>
          
          <div class="flex flex-wrap gap-3 justify-center lg:justify-start mb-6">
            <% if @profile.phone.present? %>
              
            <% end %>
            
            <% if @profile.email.present? %>
              
            <% end %>
            
            <% if @profile.location.present? %>
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm border border-white/30 rounded-lg text-white text-sm font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= @profile.location %>
              </span>
            <% end %>
          </div>
          
          <!-- Specializations -->
          <% if @profile.specializations_array.present? %>
            <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
              <% @profile.specializations_array.each do |specialization| %>
                <span class="badge-primary"><%= specialization %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="container-xl mx-auto px-4 py-12">
    <% if @profile.bio.present? %>
      <!-- About Me Section -->
      <div class="card overflow-hidden mb-8">
        <div class="card-header">
          <h2 class="text-2xl font-bold text-primary">关于我</h2>
        </div>
        
        <% if @profile.background_image.attached? %>
          <!-- Image Grid Layout (reference style) -->
          <div class="aspect-w-16 aspect-h-9 bg-surface-elevated">
            <%= image_tag @profile.background_image, 
                class: 'w-full h-full object-cover',
                alt: "关于#{@profile.full_name}" %>
          </div>
        <% end %>
        
        <div class="card-body">
          <div class="prose max-w-none text-secondary leading-relaxed">
            <%= simple_format(@profile.bio) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 z-50">
    <div class="container mx-auto px-4">
      <div class="flex justify-around items-center h-16">
        <%= link_to root_path, class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">首页</span>
        <% end %>
        
        <%= link_to teams_path(profile_id: @profile.id), class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">团队</span>
        <% end %>
        
        <%= link_to consultations_path(profile_id: @profile.id), class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">AI咨询</span>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- Footer CTA -->
  
</div>
