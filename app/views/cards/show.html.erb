<div class="min-h-screen bg-surface"
     data-controller="wechat-share"
     data-wechat-share-title-value="<%= @profile.full_name %> - <%= @profile.title %>"
     data-wechat-share-desc-value="<%= @profile.bio&.truncate(100) || '专业名片分享' %>"
     data-wechat-share-link-value="<%= request.original_url %>"
     data-wechat-share-img-url-value="<%= @profile.avatar.attached? ? url_for(@profile.avatar) : '' %>">
  <!-- Hero Section with Professional Identity -->
  <section class="bg-gradient-to-br from-primary via-primary-dark to-secondary py-16 lg:py-24">
    <div class="container-lg mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <!-- Avatar and Basic Info -->
        <div class="flex-shrink-0">
          <div class="avatar avatar-xl border-4 border-white shadow-xl">
            <% if @profile.avatar.attached? %>
              <%= image_tag @profile.avatar, alt: @profile.full_name, class: "w-full h-full object-cover" %>
            <% elsif @profile.avatar_url.present? %>
              <img src="<%= @profile.avatar_url %>" 
                   alt="<%= @profile.full_name %>" 
                   class="w-full h-full object-cover">
            <% else %>
              <div class="w-full h-full bg-white/20 flex items-center justify-center text-white text-4xl font-bold">
                <%= @profile.full_name.first %>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Professional Details -->
        <div class="flex-1 text-center lg:text-left">
          <h1 class="text-4xl lg:text-5xl font-bold text-white mb-2"><%= @profile.full_name %></h1>
          <p class="text-xl text-white/90 mb-4"><%= @profile.title %><% if @profile.company.present? %> · <%= @profile.company %><% end %></p>
          
          <div class="flex flex-wrap gap-3 justify-center lg:justify-start mb-6">
            <% if @profile.phone.present? %>
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm border border-white/30 rounded-lg text-white text-sm font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <%= @profile.phone %>
              </span>
            <% end %>
            
            <% if @profile.email.present? %>
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm border border-white/30 rounded-lg text-white text-sm font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <%= @profile.email %>
              </span>
            <% end %>
            
            <% if @profile.location.present? %>
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm border border-white/30 rounded-lg text-white text-sm font-medium">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= @profile.location %>
              </span>
            <% end %>
          </div>
          
          <!-- Specializations -->
          <% if @profile.specializations_array.present? %>
            <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
              <% @profile.specializations_array.each do |specialization| %>
                <span class="badge-primary"><%= specialization %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="container-xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column: Profile Details -->
      <div class="lg:col-span-2 space-y-8">
        <!-- About Section -->
        <% if @profile.bio.present? %>
          <div class="card">
            <div class="card-header">
              <h2 class="text-2xl font-bold text-primary">个人简介</h2>
            </div>
            <div class="card-body">
              <div class="text-secondary leading-relaxed prose max-w-none">
                <%= simple_format(@profile.bio) %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Cases Section -->
        <% if @case_studies.any? %>
          <div class="card">
            <div class="card-header">
              <h2 class="text-2xl font-bold text-primary">典型案例</h2>
            </div>
            <div class="card-body space-y-6">
              <% @case_studies.each do |case_study| %>
                <div class="border-l-4 border-primary pl-4">
                  <h3 class="text-lg font-semibold text-primary mb-2"><%= case_study.title %></h3>
                  <% if case_study.category.present? || case_study.date.present? %>
                    <p class="text-secondary text-sm mb-2">
                      <% if case_study.date.present? %><%= case_study.date %><% end %>
                      <% if case_study.category.present? && case_study.date.present? %> · <% end %>
                      <% if case_study.category.present? %><%= case_study.category %><% end %>
                    </p>
                  <% end %>
                  <p class="text-secondary leading-relaxed"><%= case_study.description %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Honors Section -->
        <% if @honors.any? %>
          <div class="card">
            <div class="card-header">
              <h2 class="text-2xl font-bold text-primary">荣誉资质</h2>
            </div>
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% @honors.each do |honor| %>
                  <div class="flex items-start gap-3 p-4 bg-surface-elevated rounded-lg border border-border">
                    <div class="icon-container icon-container-md flex-shrink-0">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-semibold text-primary mb-1"><%= honor.title %></h4>
                      <p class="text-sm text-muted">
                        <%= honor.organization %><% if honor.date.present? %> · <%= honor.date %><% end %>
                      </p>
                      <% if honor.description.present? %>
                        <p class="text-sm text-secondary mt-2"><%= honor.description %></p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column: AI Chat Assistant -->
      <div class="lg:col-span-1">
        <div class="card sticky top-4" 
             data-controller="profile-chat"
             data-profile-chat-profile-id-value="<%= @profile.id %>"
             data-profile-chat-visitor-name-value="访客"
             data-profile-chat-visitor-email-value="">
          <div class="card-header bg-gradient-to-r from-primary to-primary-dark">
            <h2 class="text-xl font-bold text-white">智能咨询助手</h2>
            <p class="text-white/80 text-sm mt-1">24小时在线，即时回复您的咨询</p>
          </div>
          
          <div class="card-body p-0">
            <!-- Chat Messages Area -->
            <div class="chat-messages h-96" data-profile-chat-target="messages">
              <!-- Welcome Message -->
              <div class="chat-message">
                <div class="avatar avatar-sm flex-shrink-0">
                  <div class="w-full h-full bg-primary/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                    </svg>
                  </div>
                </div>
                <div class="chat-bubble chat-bubble-assistant">
                  <p class="text-sm">您好！我是<%= @profile.full_name %>的AI助手。请问有什么可以帮助您的吗？</p>
                </div>
              </div>
            </div>

            <!-- Chat Input -->
            <div class="chat-input-area">
              <form data-profile-chat-target="form" action="javascript:void(0);">
                <div class="flex gap-2">
                  <input 
                    type="text" 
                    placeholder="输入您的问题..."
                    class="form-input flex-1"
                    data-profile-chat-target="input"
                    disabled>
                  <button 
                    type="submit" 
                    class="btn-primary"
                    data-profile-chat-target="sendButton"
                    disabled>
                    发送
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Stats Card -->
        <% if @profile.stats.present? && @profile.stats.values.any? { |v| v.to_i > 0 } %>
          <div class="card mt-6">
            <div class="card-body">
              <h3 class="font-semibold text-primary mb-4">专业数据</h3>
              <div class="space-y-4">
                <% if @profile.stats['years_experience'].to_i > 0 %>
                  <div class="flex items-center justify-between">
                    <span class="text-secondary">执业年限</span>
                    <span class="font-bold text-2xl text-primary"><%= @profile.stats['years_experience'] %>年</span>
                  </div>
                  <div class="section-divider my-2"></div>
                <% end %>
                
                <% if @profile.stats['cases_handled'].to_i > 0 %>
                  <div class="flex items-center justify-between">
                    <span class="text-secondary">成功案例</span>
                    <span class="font-bold text-2xl text-primary"><%= @profile.stats['cases_handled'] %>+</span>
                  </div>
                  <div class="section-divider my-2"></div>
                <% end %>
                
                <% if @profile.stats['clients_served'].to_i > 0 %>
                  <div class="flex items-center justify-between">
                    <span class="text-secondary">服务客户</span>
                    <span class="font-bold text-2xl text-primary"><%= @profile.stats['clients_served'] %>+</span>
                  </div>
                  <div class="section-divider my-2"></div>
                <% end %>
                
                <% if @profile.stats['success_rate'].to_i > 0 %>
                  <div class="flex items-center justify-between">
                    <span class="text-secondary">成功率</span>
                    <span class="font-bold text-2xl text-success"><%= @profile.stats['success_rate'] %>%</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Footer CTA -->
  <section class="bg-surface-elevated py-12 mt-12 border-t border-border">
    <div class="container-lg mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-primary mb-4">需要专业服务？</h2>
      <p class="text-secondary mb-6 max-w-2xl mx-auto">
        <%= @profile.bio&.truncate(100) || "专业团队，为您提供全方位解决方案。" %>
      </p>
      <div class="flex gap-4 justify-center">
        <% if @profile.phone.present? %>
          <a href="tel:<%= @profile.phone %>" class="btn-primary btn-lg">
            立即联系
          </a>
        <% end %>
        <% if @profile.email.present? %>
          <a href="mailto:<%= @profile.email %>" class="btn-outline btn-lg">
            发送邮件
          </a>
        <% end %>
      </div>
    </div>
  </section>
</div>
