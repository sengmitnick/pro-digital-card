<div class="min-h-screen bg-surface flex items-center justify-center pb-20">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-2xl mx-auto">
      <!-- AI Icon -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-primary/10">
          <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
      </div>

      <!-- Title -->
      <h1 class="text-4xl font-bold text-on-surface mb-4">
        AI 智能咨询
      </h1>

      <!-- Description -->
      <p class="text-lg text-on-surface-variant mb-8">
        我们正在开发智能 AI 咨询功能，敬请期待
      </p>

      <!-- Features Preview -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="card">
          <div class="card-body text-center">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-on-surface mb-2">智能对话</h3>
            <p class="text-sm text-on-surface-variant">24/7 在线智能问答</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body text-center">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-on-surface mb-2">专业建议</h3>
            <p class="text-sm text-on-surface-variant">基于专业知识的建议</p>
          </div>
        </div>

        <div class="card">
          <div class="card-body text-center">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-on-surface mb-2">快速响应</h3>
            <p class="text-sm text-on-surface-variant">即时获取答案</p>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="inline-block px-8 py-3 bg-surface-variant/30 rounded-lg text-on-surface-variant">
        功能开发中...
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 z-50">
    <div class="container mx-auto px-4">
      <div class="flex justify-around items-center h-16">
        <%= link_to (params[:profile_id].present? ? card_path(Profile.find(params[:profile_id]).slug) : root_path), class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">首页</span>
        <% end %>
        
        <%= link_to teams_path(profile_id: params[:profile_id]), class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">团队</span>
        <% end %>
        
        <%= link_to consultations_path(profile_id: params[:profile_id]), class: "flex flex-col items-center justify-center flex-1 text-center bg-primary/5" do %>
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <span class="text-xs mt-1 text-primary font-medium">咨询</span>
        <% end %>
      </div>
    </div>
  </nav>
</div>
