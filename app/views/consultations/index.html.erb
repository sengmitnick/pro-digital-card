<div class="min-h-screen bg-surface flex flex-col pb-16"
     data-controller="profile-chat"
     data-profile-chat-profile-id-value="<%= params[:profile_id] %>"
     data-profile-chat-visitor-name-value="<%= params[:visitor_name] || 'Anonymous' %>"
     data-profile-chat-visitor-email-value="<%= params[:visitor_email] %>">
  
  <!-- Header -->
  <div class="sticky top-0 z-10 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="mx-auto max-w-3xl px-4 py-4">
      <div class="flex items-center gap-3">
        <%= link_to (@profile.present? ? card_path(@profile.slug) : root_path), class: "text-gray-600 dark:text-gray-400 hover:text-primary" do %>
          
        <% end %>
        
        <% if @profile.present? %>
          <div class="flex items-center gap-3 flex-1">
            <% if @profile.avatar.attached? %>
              <%= image_tag @profile.avatar, class: "w-10 h-10 rounded-full object-cover" %>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                <span class="text-primary font-semibold"><%= @profile.full_name[0] %></span>
              </div>
            <% end %>
            <div>
              <h1 class="font-semibold text-on-surface"><%= @profile.full_name %></h1>
              <p class="text-xs text-on-surface-variant"><%= @profile.title %></p>
            </div>
          </div>
        <% else %>
          <h1 class="font-semibold text-on-surface">AI 智能咨询</h1>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Messages Container -->
  <div class="flex-1 overflow-y-auto px-4 py-6" data-profile-chat-target="messages">
    <div class="container mx-auto max-w-3xl space-y-4">
      <!-- Welcome Message -->
      <div class="chat-message">
        <div class="avatar avatar-sm flex-shrink-0">
          <% if @profile.present? && @profile.avatar.attached? %>
            <%= image_tag @profile.avatar, class: "w-full h-full rounded-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-primary/10 flex items-center justify-center rounded-full">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
              </svg>
            </div>
          <% end %>
        </div>
        <div class="chat-bubble chat-bubble-assistant">
          <div class="text-sm prose prose-sm max-w-none">
            <% if @profile.present? %>
              <p>您好！我是<strong><%= @profile.full_name %></strong>的智能名片助手。</p>
              <p>我可以帮您了解<%= @profile.full_name %>的专业背景和团队信息，或者为您推荐合适的专业人士。</p>
              <p>请问有什么可以帮到您？</p>
            <% else %>
              <p>您好！我是智能咨询助手。</p>
              <p>我可以帮您了解我们的团队和服务。请问有什么可以帮到您？</p>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Messages will be appended here dynamically -->
    </div>
  </div>

  <!-- Input Area -->
  <div class="sticky bottom-16 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 px-4 py-3">
    <div class="container mx-auto max-w-3xl">
      <form data-profile-chat-target="form" data-action="submit->profile-chat#handleSubmit" class="flex gap-2 items-end">
        <input
          type="text"
          data-profile-chat-target="input"
          placeholder="输入您的问题..."
          class="flex-1 px-3 py-2.5 border border-gray-300 dark:border-gray-600 rounded-2xl 
                 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent
                 bg-white dark:bg-gray-700 text-on-surface text-sm sm:text-base"
          disabled>
        <button
          type="submit"
          data-profile-chat-target="sendButton"
          class="send-button flex-shrink-0 w-10 h-10 sm:w-auto sm:h-auto sm:px-5 sm:py-2.5 
                 rounded-full sm:rounded-xl flex items-center justify-center gap-2 
                 font-medium text-white transition-all duration-200 border-0 outline-none
                 bg-gradient-to-br from-primary via-primary to-primary-variant
                 hover:shadow-lg hover:shadow-primary/30 hover:scale-105
                 active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed 
                 disabled:hover:scale-100 disabled:hover:shadow-none"
          disabled>
          <svg class="w-5 h-5 sm:w-4 sm:h-4" 
               fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 19V5m0 0l-7 7m7-7l7 7"></path>
          </svg>
          <span class="hidden sm:inline text-sm">发送</span>
        </button>
      </form>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 z-50"
       data-controller="bottom-nav"
       data-bottom-nav-current-page-value="consultation">
    <div class="container mx-auto px-4">
      <div class="flex justify-around items-center h-16">
        <%= link_to (@profile.present? ? card_path(@profile.slug, profile_id: params[:profile_id]) : root_path), 
            class: "flex flex-col items-center justify-center flex-1 text-center transition-colors",
            data: { bottom_nav_target: "item", page: "card" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-xs mt-1">首页</span>
        <% end %>
        
        <%= link_to teams_path(profile_id: params[:profile_id]), 
            class: "flex flex-col items-center justify-center flex-1 text-center transition-colors",
            data: { bottom_nav_target: "item", page: "team" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-xs mt-1">团队</span>
        <% end %>
        
        <%= link_to consultations_path(profile_id: params[:profile_id]), 
            class: "flex flex-col items-center justify-center flex-1 text-center transition-colors",
            data: { bottom_nav_target: "item", page: "consultation" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <span class="text-xs mt-1">咨询</span>
        <% end %>
      </div>
    </div>
  </nav>
</div>

<style>
  /* Chat message styles */
  .chat-message {
    display: flex;
    gap: 0.75rem;
    animation: slideIn 0.2s ease-out;
  }

  .chat-message-user {
    justify-content: flex-end;
  }

  .chat-bubble {
    max-width: 75%;
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    word-wrap: break-word;
  }

  .chat-bubble-user {
    background: hsl(var(--color-primary));
    color: white;
    border-bottom-right-radius: 0.25rem;
    margin-left: auto;
  }

  .chat-bubble-assistant {
    background: hsl(var(--color-surface-variant) / 0.5);
    color: hsl(var(--color-on-surface));
    border-bottom-left-radius: 0.25rem;
  }

  .avatar {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .avatar-sm {
    width: 2rem;
    height: 2rem;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Member card styles */
  .member-card {
    margin: 0.75rem 0;
    padding: 1rem;
    border: 1px solid hsl(var(--color-outline) / 0.2);
    border-radius: 0.75rem;
    background: hsl(var(--color-surface));
    animation: slideIn 0.3s ease-out;
  }

  .member-card:hover {
    border-color: hsl(var(--color-primary) / 0.3);
    box-shadow: 0 2px 8px hsl(var(--color-primary) / 0.1);
    transition: all 0.2s ease;
  }

  /* Tool call indicator */
  .tool-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: hsl(var(--color-primary) / 0.1);
    border-radius: 0.5rem;
    color: hsl(var(--color-primary));
    font-size: 0.875rem;
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
</style>
