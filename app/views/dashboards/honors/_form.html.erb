<%= form_with model: honor, url: honor.new_record? ? dashboards_honors_path : dashboards_honor_path(honor), method: honor.new_record? ? :post : :patch, local: true, class: "space-y-6" do |form| %>
  <%= render 'shared/form_error_message', model: honor %>

  <div>
    <%= form.label :title, '荣誉名称', class: "form-label" %>
    <%= form.text_field :title, required: true, class: "form-input", placeholder: "例如：国际项目管理专业人士（PMP）" %>
    <div class="form-help">完整准确的证书/奖项名称</div>
  </div>

  <div>
    <%= form.label :organization, '颁发机构', class: "form-label" %>
    <%= form.text_field :organization, required: true, class: "form-input", placeholder: "例如：Project Management Institute" %>
    <div class="form-help">权威机构全称</div>
  </div>

  <div>
    <%= form.label :date, '获得日期', class: "form-label" %>
    <%= form.text_field :date, class: "form-input", placeholder: "例如：2023年3月 或 2023-03" %>
    <div class="form-help">格式：YYYY年MM月（可选）</div>
  </div>

  <div>
    <%= form.label :description, '补充说明', class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-input", placeholder: "简短说明这个荣誉的意义或含金量（可选）" %>
    <div class="form-help">30-60字，简短说明（可选）</div>
  </div>

  <div class="pt-6 border-t border-border">
    <div class="flex justify-end gap-3">
      <%= link_to "取消", dashboards_honors_path, class: "btn-ghost" %>
      <%= form.submit honor.new_record? ? "创建荣誉" : "更新荣誉", class: "btn-primary" %>
    </div>
  </div>
<% end %>
