<div class="min-h-screen bg-surface py-6 sm:py-8">
  <div class="container-xl mx-auto px-4">
    <div class="max-w-lg mx-auto">
      <!-- Header -->
      <div class="mb-6 text-center">
        <h1 class="text-2xl sm:text-3xl font-bold text-primary mb-2">分享自己</h1>
        <p class="text-sm text-secondary">长按识别二维码分享</p>
      </div>

      <!-- QR Code Card -->
      <div class="card">
        <div class="card-body text-center p-6">
          <!-- Profile Info -->
          <div class="flex items-center gap-4 mb-6 pb-6 border-b border-border">
            <div class="w-16 h-16 rounded-full overflow-hidden flex-shrink-0 border-2 border-primary/20">
              <% if @profile.avatar.attached? %>
                <%= image_tag @profile.avatar, alt: @profile.full_name, class: "w-full h-full object-cover" %>
              <% elsif @profile.avatar_url.present? %>
                <img src="<%= @profile.avatar_url %>" alt="<%= @profile.full_name %>" class="w-full h-full object-cover">
              <% else %>
                <div class="w-full h-full bg-primary/10 flex items-center justify-center text-primary text-xl font-bold">
                  <%= @profile.full_name.first %>
                </div>
              <% end %>
            </div>
            <div class="text-left flex-1 min-w-0">
              <h3 class="text-lg font-bold text-primary mb-1"><%= @profile.full_name %></h3>
              <p class="text-sm text-secondary line-clamp-2"><%= @profile.title %></p>
            </div>
          </div>

          <!-- QR Code -->
          <div class="flex justify-center mb-6">
            <div class="bg-white p-6 rounded-xl shadow-sm">
              <img src="data:image/png;base64,<%= @qr_png_base64 %>" 
                   alt="名片二维码" 
                   class="block"
                   style="width: 280px; height: auto; image-rendering: pixelated;" />
            </div>
          </div>

          <!-- Instructions -->
          
        </div>
      </div>
    </div>
  </div>
</div>
