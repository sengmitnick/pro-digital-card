<div class="min-h-screen bg-surface">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary via-primary-dark to-secondary py-20 lg:py-32">
    <div class="container-lg mx-auto px-4 text-center">
      <h1 class="text-5xl lg:text-7xl font-bold text-white mb-6">专业名片</h1>
      <p class="text-xl lg:text-2xl text-white/90 mb-8 max-w-3xl mx-auto">
        为律师、医生、保险从业者等专业人士打造的智能数字名片平台
      </p>
      <p class="text-lg text-white/80 mb-12 max-w-2xl mx-auto">
        展示专业形象，智能咨询互动，让客户更好地了解您的专业服务
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "查看演示", "#featured", class: "btn-primary btn-xl" %>
      </div>
    </div>
  </section>

  <!-- Featured Profiles Section -->
  <section id="featured" class="py-16 lg:py-24">
    <div class="container-xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary mb-4">专业人士展示</h2>
        <p class="text-xl text-secondary max-w-3xl mx-auto">
          来看看我们平台上的专业人士如何展示他们的专业服务
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% Profile.limit(6).each do |profile| %>
          <div class="card hover:shadow-lg transition-shadow">
            <div class="card-body text-center">
              <!-- Avatar -->
              <div class="avatar avatar-lg mx-auto mb-4">
                <% if profile.avatar_url.present? %>
                  <img src="<%= profile.avatar_url %>" 
                       alt="<%= profile.full_name %>" 
                       class="w-full h-full object-cover">
                <% else %>
                  <div class="w-full h-full bg-primary/10 flex items-center justify-center text-primary text-2xl font-bold">
                    <%= profile.full_name.first %>
                  </div>
                <% end %>
              </div>

              <!-- Info -->
              <h3 class="text-xl font-bold text-primary mb-2"><%= profile.full_name %></h3>
              <p class="text-secondary mb-4"><%= profile.title %></p>
              
              <!-- Specializations -->
              <div class="flex flex-wrap gap-1 justify-center mb-6">
                <% profile.specializations_array.take(3).each do |spec| %>
                  <span class="badge-secondary"><%= spec %></span>
                <% end %>
              </div>

              <!-- Stats -->
              <% if profile.stats.present? && profile.stats['years_experience'].to_i > 0 %>
                <div class="bg-surface-elevated rounded-lg p-4 mb-4">
                  <div class="grid grid-cols-2 gap-4 text-sm">
                    <div class="text-center">
                      <div class="font-bold text-lg text-primary"><%= profile.stats['years_experience'] %>年</div>
                      <div class="text-muted">执业经验</div>
                    </div>
                    <% if profile.stats['success_rate'].to_i > 0 %>
                      <div class="text-center">
                        <div class="font-bold text-lg text-success"><%= profile.stats['success_rate'] %>%</div>
                        <div class="text-muted">成功率</div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- View Button -->
              <%= link_to "查看名片", card_path(profile), class: "btn-primary w-full" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 lg:py-24 bg-surface-elevated">
    <div class="container-xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary mb-4">平台特色</h2>
        <p class="text-xl text-secondary max-w-3xl mx-auto">
          为专业人士量身打造的数字化展示和客户互动解决方案
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="icon-container icon-container-lg mx-auto mb-4 bg-primary text-white">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary mb-2">专业形象展示</h3>
          <p class="text-secondary">完整展示个人信息、专业资质、成功案例和荣誉成就</p>
        </div>

        <div class="text-center">
          <div class="icon-container icon-container-lg mx-auto mb-4 bg-primary text-white">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary mb-2">智能AI咨询</h3>
          <p class="text-secondary">24小时AI助手为访客提供即时专业咨询服务</p>
        </div>

        <div class="text-center">
          <div class="icon-container icon-container-lg mx-auto mb-4 bg-primary text-white">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary mb-2">数据分析</h3>
          <p class="text-secondary">查看访客咨询记录、常见问题统计等数据分析</p>
        </div>

        <div class="text-center">
          <div class="icon-container icon-container-lg mx-auto mb-4 bg-primary text-white">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary mb-2">响应式设计</h3>
          <p class="text-secondary">完美适配手机、平板、电脑等各种设备</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24">
    <div class="container-lg mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-primary mb-6">开始打造您的专业名片</h2>
      <p class="text-xl text-secondary mb-8 max-w-2xl mx-auto">
        联系管理员获取邀请链接，加入我们的专业团队
      </p>
    </div>
  </section>
</div>