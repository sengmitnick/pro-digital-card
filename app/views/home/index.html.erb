<div class="min-h-screen bg-surface">
  <!-- 1. Picture (卖你一个梦) - Why: 组织的使命愿景 -->
  <section class="bg-gradient-to-br from-primary via-primary-dark to-secondary py-12 sm:py-16 lg:py-32">
    <div class="container-lg mx-auto px-4 sm:px-6 text-center">
      <!-- 组织 Logo -->
      <% if @organization&.logo&.attached? %>
        <div class="mb-6 sm:mb-8">
          <%= image_tag @organization.logo, alt: @organization.name, class: "h-16 sm:h-20 lg:h-24 w-auto mx-auto" %>
        </div>
      <% end %>

      <!-- 组织名称 -->
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-white mb-4 sm:mb-6 leading-tight px-2">
        <%= @organization&.name || '专业数字名片平台' %>
      </h1>
      
      <!-- 组织使命描述 -->
      <p class="text-base sm:text-xl lg:text-3xl text-white/95 font-semibold mb-8 sm:mb-12 max-w-4xl mx-auto leading-relaxed px-2">
        <%= @organization&.description || '让每一位专业人士拥有自己的智能数字名片，随时随地展示专业价值，24小时智能服务客户' %>
      </p>
      
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-xs sm:max-w-none mx-auto px-4">
        <%= link_to "认识我们的团队", "#team", class: "btn-white btn-lg sm:btn-xl whitespace-nowrap" %>
        <%= link_to "了解我们的服务", "#services", class: "btn-outline-light btn-lg sm:btn-xl whitespace-nowrap" %>
      </div>
    </div>
  </section>

  <!-- 2. Promise (承诺有办法提供解决方案) - How: 我们如何服务客户 -->
  <section id="services" class="py-12 sm:py-16 lg:py-24 bg-surface-elevated">
    <div class="container-xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10 sm:mb-16">
        <h2 class="text-2xl sm:text-3xl lg:text-5xl font-bold text-primary mb-3 sm:mb-6">我们的服务优势</h2>
        <p class="text-base sm:text-lg lg:text-xl text-secondary max-w-3xl mx-auto px-4">
          通过专业的团队和智能技术，为您提供卓越的服务体验
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8 mb-12 sm:mb-16">
        <!-- 服务特色 1 -->
        <div class="card text-center">
          <div class="card-body">
            <div class="icon-container icon-container-lg sm:icon-container-xl mx-auto mb-4 sm:mb-6 bg-gradient-to-br from-primary to-primary-dark text-white">
              <svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-primary mb-3 sm:mb-4">
              <%= @organization&.service_advantage_1_title.presence || '专业团队' %>
            </h3>
            <p class="text-sm sm:text-base lg:text-lg text-secondary leading-relaxed">
              <%= @organization&.service_advantage_1_description.presence || '汇聚行业精英，每位成员都拥有丰富的专业经验和卓越的服务能力' %>
            </p>
          </div>
        </div>

        <!-- 服务特色 2 -->
        <div class="card text-center">
          <div class="card-body">
            <div class="icon-container icon-container-lg sm:icon-container-xl mx-auto mb-4 sm:mb-6 bg-gradient-to-br from-primary to-primary-dark text-white">
              <svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-primary mb-3 sm:mb-4">
              <%= @organization&.service_advantage_2_title.presence || '智能服务' %>
            </h3>
            <p class="text-sm sm:text-base lg:text-lg text-secondary leading-relaxed">
              <%= @organization&.service_advantage_2_description.presence || '24小时AI智能助手，随时为客户解答疑问，智能匹配最合适的专业人士' %>
            </p>
          </div>
        </div>

        <!-- 服务特色 3 -->
        <div class="card text-center">
          <div class="card-body">
            <div class="icon-container icon-container-lg sm:icon-container-xl mx-auto mb-4 sm:mb-6 bg-gradient-to-br from-primary to-primary-dark text-white">
              <svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-primary mb-3 sm:mb-4">
              <%= @organization&.service_advantage_3_title.presence || '品质保证' %>
            </h3>
            <p class="text-sm sm:text-base lg:text-lg text-secondary leading-relaxed">
              <%= @organization&.service_advantage_3_description.presence || '严格的服务标准和质量管理体系，确保每一次服务都超出预期' %>
            </p>
          </div>
        </div>
      </div>

      <!-- 服务流程 -->
      <div class="bg-white rounded-2xl shadow-sm p-6 sm:p-8 lg:p-12">
        <h3 class="text-xl sm:text-2xl font-bold text-primary text-center mb-6 sm:mb-8">服务流程</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
              <span class="text-xl sm:text-2xl font-bold text-primary">1</span>
            </div>
            <h4 class="font-bold text-primary mb-2"><%= @organization&.service_process_1_title.presence || '了解需求' %></h4>
            <p class="text-sm text-secondary"><%= @organization&.service_process_1_description.presence || '深入沟通，准确把握您的需求' %></p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
              <span class="text-xl sm:text-2xl font-bold text-primary">2</span>
            </div>
            <h4 class="font-bold text-primary mb-2"><%= @organization&.service_process_2_title.presence || '匹配专家' %></h4>
            <p class="text-sm text-secondary"><%= @organization&.service_process_2_description.presence || '智能推荐最合适的团队成员' %></p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
              <span class="text-xl sm:text-2xl font-bold text-primary">3</span>
            </div>
            <h4 class="font-bold text-primary mb-2"><%= @organization&.service_process_3_title.presence || '专业服务' %></h4>
            <p class="text-sm text-secondary"><%= @organization&.service_process_3_description.presence || '提供专业、高效的服务方案' %></p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
              <span class="text-xl sm:text-2xl font-bold text-primary">4</span>
            </div>
            <h4 class="font-bold text-primary mb-2"><%= @organization&.service_process_4_title.presence || '持续跟进' %></h4>
            <p class="text-sm text-secondary"><%= @organization&.service_process_4_description.presence || '确保服务质量，持续优化体验' %></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3. Prove (证明我有能力提供宣称的好处) - What: 我们的团队 -->
  <section id="team" class="py-12 sm:py-16 lg:py-24">
    <div class="container-xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10 sm:mb-16">
        <h2 class="text-2xl sm:text-3xl lg:text-5xl font-bold text-primary mb-3 sm:mb-6">认识我们的团队</h2>
        <p class="text-base sm:text-lg lg:text-xl text-secondary max-w-3xl mx-auto px-4">
          专业、热情、值得信赖的团队成员，随时为您提供优质服务
        </p>
      </div>

      <% if @team_members.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
          <% @team_members.each do |profile| %>
            <div class="card hover:shadow-xl transition-all duration-300 group">
              <div class="card-body text-center">
                <!-- Avatar -->
                <div class="avatar avatar-lg sm:avatar-xl mx-auto mb-3 sm:mb-4 ring-4 ring-primary/10 group-hover:ring-primary/30 transition-all">
                  <% if profile.avatar.attached? %>
                    <%= image_tag profile.avatar, alt: profile.full_name, class: "w-full h-full object-cover" %>
                  <% else %>
                    <div class="w-full h-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center text-white text-2xl sm:text-3xl font-bold">
                      <%= profile.full_name.first %>
                    </div>
                  <% end %>
                </div>

                <!-- Info -->
                <h3 class="text-xl sm:text-2xl font-bold text-primary mb-1 sm:mb-2"><%= profile.full_name %></h3>
                <p class="text-base sm:text-lg text-secondary mb-1 sm:mb-2"><%= profile.title %></p>
                <% if profile.department.present? %>
                  <p class="text-xs sm:text-sm text-muted mb-3 sm:mb-4"><%= profile.department %></p>
                <% end %>
                
                <!-- Stats -->
                <% if profile.stats.present? && (profile.stats['years_experience'].to_i > 0 || profile.stats['cases_handled'].to_i > 0) %>
                  <div class="bg-gradient-to-br from-surface-elevated to-surface rounded-xl p-3 sm:p-4 mb-4 sm:mb-6">
                    <div class="grid grid-cols-2 gap-3 sm:gap-4">
                      <% if profile.stats['years_experience'].to_i > 0 %>
                        <div class="text-center">
                          <div class="font-bold text-xl sm:text-2xl text-primary"><%= profile.stats['years_experience'] %><span class="text-sm sm:text-base">年</span></div>
                          <div class="text-xs sm:text-sm text-muted">从业经验</div>
                        </div>
                      <% end %>
                      <% if profile.stats['cases_handled'].to_i > 0 %>
                        <div class="text-center">
                          <div class="font-bold text-xl sm:text-2xl text-primary"><%= profile.stats['cases_handled'] %><span class="text-sm sm:text-base">+</span></div>
                          <div class="text-xs sm:text-sm text-muted">服务案例</div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <!-- View Button -->
                <%= link_to card_path(profile), class: "btn-primary w-full text-sm sm:text-base group-hover:shadow-md transition-all" do %>
                  <span>了解更多</span>
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 inline-block ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Empty state -->
        <div class="text-center py-12 sm:py-16">
          <div class="icon-container icon-container-lg sm:icon-container-xl mx-auto mb-4 sm:mb-6 bg-surface-elevated text-muted">
            <svg class="w-10 h-10 sm:w-12 sm:h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-primary mb-3 sm:mb-4">团队成员正在筹备中</h3>
          <p class="text-base sm:text-lg text-secondary">我们的专业团队即将与您见面</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="py-12 sm:py-16 bg-gradient-to-br from-primary/5 to-secondary/5">
    <div class="container-xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 text-center">
        <div>
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-primary mb-1 sm:mb-2"><%= @team_members.count %>+</div>
          <div class="text-sm sm:text-base lg:text-lg text-secondary">专业团队</div>
        </div>
        <div>
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-primary mb-1 sm:mb-2">24/7</div>
          <div class="text-sm sm:text-base lg:text-lg text-secondary">智能服务</div>
        </div>
        <div>
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-primary mb-1 sm:mb-2">100%</div>
          <div class="text-sm sm:text-base lg:text-lg text-secondary">品质保证</div>
        </div>
        <div>
          <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-primary mb-1 sm:mb-2">∞</div>
          <div class="text-sm sm:text-base lg:text-lg text-secondary">服务响应</div>
        </div>
      </div>
    </div>
  </section>

  <!-- 4. Push (催促你有办法购买) - CTA: 联系我们 -->
  <section class="py-12 sm:py-16 lg:py-32 bg-gradient-to-br from-primary via-primary-dark to-secondary">
    <div class="container-lg mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl sm:text-3xl lg:text-5xl font-bold text-white mb-4 sm:mb-6 leading-tight px-2">
        <%= @organization&.cta_title.presence || '开始与我们合作' %>
      </h2>
      <p class="text-base sm:text-lg lg:text-2xl text-white/90 mb-8 sm:mb-12 max-w-3xl mx-auto leading-relaxed">
        <%= @organization&.cta_description.presence || '立即联系我们，让专业团队为您提供优质服务' %>
      </p>
      
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-6 sm:mb-8 max-w-xs sm:max-w-none mx-auto px-4">
        <% if current_user %>
          <%= link_to "进入工作台", dashboards_path, class: "btn-white btn-lg sm:btn-xl shadow-lg hover:shadow-xl transition-all whitespace-nowrap" %>
        <% else %>
          <%= link_to "立即登录", new_session_path, class: "btn-white btn-lg sm:btn-xl shadow-lg hover:shadow-xl transition-all whitespace-nowrap" %>
        <% end %>
        <%= link_to "认识我们的团队", "#team", class: "btn-outline-light btn-lg sm:btn-xl whitespace-nowrap" %>
      </div>

      <p class="text-white/70 text-xs sm:text-sm">
        💡 提示：如需加入团队，请联系管理员获取邀请链接
      </p>
    </div>
  </section>
  
  <!-- Builder Attribution -->
  <div class="py-6 bg-surface/50 border-t border-border/30">
    <div class="container-xl mx-auto px-4 sm:px-6">
      <div class="text-right">
        <% if ENV['BUILDER_NAME'].present? && ENV['BUILDER_URL'].present? %>
          <%= link_to ENV['BUILDER_URL'], target: '_blank', rel: 'noopener', class: 'text-xs text-muted hover:text-primary transition-colors inline-flex items-center gap-1' do %>
            <span>由</span>
            <span class="font-medium"><%= ENV['BUILDER_NAME'] %></span>
            <span>提供支持</span>
            <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
