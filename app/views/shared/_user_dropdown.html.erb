<!-- User dropdown menu - Powered by dropdown_controller.ts -->
<!-- This component is production-ready and handles all edge cases -->
<div data-controller="dropdown" class="relative">
  <!-- Dropdown trigger button -->
  <button type="button"
          data-dropdown-target="trigger"
          data-action="click->dropdown#toggle"
          class="flex items-center space-x-2 px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
    <!-- User avatar -->
    <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-gray-50 text-sm font-medium">
      <%= current_user.name&.first&.upcase || current_user.email&.first&.upcase || 'U' %>
    </div>
    <!-- User name (hidden on mobile) -->
    <span class="hidden md:block text-sm font-medium">
      <%= current_user.name || current_user.email&.split('@')&.first %>
    </span>
    <!-- Dropdown arrow -->
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <!-- Dropdown menu (hidden by default, controlled by dropdown_controller) -->
  <div data-dropdown-target="menu"
       class="hidden absolute right-0 mt-2 w-56 bg-gray-50 dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-50">
    <!-- User info header -->
    <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700">
      <p class="text-sm font-medium text-gray-900 dark:text-gray-50">
        <%= current_user.name || 'User' %>
      </p>
      <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
        <%= current_user.email %>
      </p>
    </div>

    <!-- Application menu items -->
    <%= link_to dashboards_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
      <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
      </svg>
      首页
    <% end %>
    <%= link_to settings_dashboards_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
      <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
      </svg>
      编辑信息
    <% end %>
    <%= link_to share_card_dashboards_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
      <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"/>
      </svg>
      分享自己
    <% end %>


    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700"></div>

    <!-- Sign out -->
    <div class="border-t border-gray-200 dark:border-gray-700">
      <%= button_to sign_out_path, method: :delete, class: "flex items-center w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"/>
        </svg>
        退出登录
      <% end %>
    </div>
  </div>
</div>
