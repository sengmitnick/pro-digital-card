<!-- Navigation -->
<div class="flex-grow flex flex-col">
  <div class="px-4">
    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
      <div class="pb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">MENU</div>
    </div>
  </div>

  <nav class="px-4 space-y-1">
    <ul class="space-y-1">
      <%= render 'shared/admin/sidebar' %>
    </ul>
  </nav>

  <div class="px-4 mt-6">
    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
      <div class="pb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">SYSTEM</div>
    </div>
  </div>

  <nav class="px-4 space-y-1">
    <ul class="space-y-1">
      <li>
        <%= link_to admin_administrators_path,
            class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-blue-100 hover:text-blue-700 dark:hover:bg-blue-900 dark:hover:text-blue-300 rounded-lg transition-colors #{'bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300' if current_path.include?('/admin/administrators')}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
          </svg>
          Administrators
        <% end %>
      </li>
      <li>
        <%= link_to admin_admin_oplogs_path,
            class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-blue-100 hover:text-blue-700 dark:hover:bg-blue-900 dark:hover:text-blue-300 rounded-lg transition-colors #{'bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300' if current_path.include?('/admin/admin_oplogs')}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
          </svg>
          Operation Logs
        <% end %>
      </li>
      <!-- Job Queue -->
      <li>
        <%= link_to admin_good_job_path, target: '_blank',
            class: "flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-blue-100 hover:text-blue-700 dark:hover:bg-blue-900 dark:hover:text-blue-300 rounded-lg transition-colors #{current_path.include?('/admin/good_job') ? 'bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
          Job Queue
          <svg class="w-4 h-4 ml-auto opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
