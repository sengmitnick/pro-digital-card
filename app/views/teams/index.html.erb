<div class="min-h-screen bg-surface pb-20">
  <!-- Header with organization info -->
  <div class="bg-gradient-to-r from-primary to-primary-dark text-white py-12">
    <div class="container mx-auto px-4">
      <% if @organization %>
        <h1 class="text-3xl font-bold mb-2"><%= @organization.name %></h1>
        <p class="text-white/80"><%= @organization.description %></p>
      <% end %>
    </div>
  </div>

  <!-- Members list by department -->
  <div class="container mx-auto px-4 py-8">
    <% if @organization && @departments.any? %>
      <% @departments.each do |department, members| %>
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-primary mb-6 pb-2 border-b-2 border-primary">
            <%= department.presence || '其他' %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% members.each do |profile| %>
              <%= link_to card_path(profile.slug), class: "card hover:shadow-lg transition-shadow" do %>
                <div class="card-body">
                  <div class="flex items-center gap-4">
                    <!-- Avatar -->
                    <div class="flex-shrink-0">
                      <% if profile.avatar.attached? %>
                        <%= image_tag profile.avatar, 
                            class: 'w-20 h-20 rounded-full object-cover' %>
                      <% else %>
                        <div class="w-20 h-20 rounded-full bg-primary/20 flex items-center justify-center">
                          <span class="text-2xl text-primary font-semibold">
                            <%= profile.full_name[0] %>
                          </span>
                        </div>
                      <% end %>
                    </div>

                    <!-- Info -->
                    <div class="flex-1">
                      <h3 class="text-lg font-bold text-on-surface mb-1">
                        <%= profile.full_name %>
                      </h3>
                      <p class="text-sm text-on-surface-variant mb-2">
                        <%= profile.title %>
                      </p>
                      <% if profile.specializations_array.any? %>
                        <div class="flex flex-wrap gap-1">
                          <% profile.specializations_array.take(2).each do |spec| %>
                            <span class="badge badge-sm">
                              <%= spec %>
                            </span>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <p class="text-on-surface-variant text-lg">暂无团队成员</p>
      </div>
    <% end %>
  </div>

  <!-- Invite Button (Admin Only) -->
  <% if @is_admin && @is_own_profile && @organization %>
    <button 
      type="button"
      class="fixed bottom-24 right-6 z-40 btn-primary rounded-full w-14 h-14 flex items-center justify-center shadow-lg hover:shadow-xl transition-all"
      data-controller="team-invite"
      data-action="click->team-invite#generateInvite"
      data-team-invite-org-name-value="<%= @organization.name %>"
      data-team-invite-invite-token-value="<%= @organization.invite_token %>"
      title="邀请成员">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
      </svg>
    </button>
  <% end %>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 z-50">
    <div class="container mx-auto px-4">
      <div class="flex justify-around items-center h-16">
        <%= link_to (params[:profile_id].present? ? card_path(@profile.slug) : root_path), class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">首页</span>
        <% end %>
        
        <%= link_to teams_path(profile_id: params[:profile_id]), class: "flex flex-col items-center justify-center flex-1 text-center bg-primary/5" do %>
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-xs mt-1 text-primary font-medium">团队</span>
        <% end %>
        
        <%= link_to consultations_path(profile_id: params[:profile_id]), class: "flex flex-col items-center justify-center flex-1 text-center hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <span class="text-xs mt-1 text-gray-600 dark:text-gray-400">AI咨询</span>
        <% end %>
      </div>
    </div>
  </nav>
</div>
