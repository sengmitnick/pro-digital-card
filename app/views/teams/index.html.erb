<% content_for :title, @organization&.name || '团队' %>

<div class="min-h-screen bg-surface pb-20">
  <!-- Header with organization info - Medical team style -->
  <div class="bg-gradient-to-br from-[#5B8DBE] to-[#4A7BA8] text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <% if @organization %>
        <h1 class="text-4xl md:text-5xl font-bold tracking-wide">
          <%= @organization.name %>
        </h1>
      <% end %>
    </div>
  </div>

  <!-- Members list by department -->
  <div class="container mx-auto px-3 py-8">
    <% if @organization && @departments.any? %>
      <% @departments.each do |department, members| %>
        <div class="mb-12">
          <!-- Department title with left border -->
          <h2 class="text-xl font-bold text-primary mb-6 pl-3 border-l-4 border-primary">
            <%= department.presence || '核心成员' %>
          </h2>
          
          <!-- Members grid - 3 columns on mobile -->
          <div class="grid grid-cols-3 gap-4">
            <% members.each do |member_profile| %>
              <%= link_to card_path(member_profile.slug, profile_id: params[:profile_id]), class: "group block" do %>
                <!-- Compact professional card -->
                <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300">
                  <!-- Professional photo -->
                  <div class="aspect-[3/4] overflow-hidden bg-gradient-to-br from-[#E8F0F7] to-[#D4E4F0]">
                    <% if member_profile.avatar.attached? %>
                      <%= image_tag member_profile.avatar, 
                          class: 'w-full h-full object-cover' %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                          <span class="text-xl text-primary font-bold">
                            <%= member_profile.full_name[0] %>
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>

                  <!-- Name and title info -->
                  <div class="p-3 text-center">
                    <h3 class="text-sm font-bold text-primary mb-1 leading-tight">
                      <%= member_profile.full_name %>
                    </h3>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <p class="text-on-surface-variant text-lg">暂无团队成员</p>
      </div>
    <% end %>
  </div>

  <!-- Builder Attribution (positioned above bottom nav) -->
  <div class="py-4 sm:py-6 bg-surface/50 border-t border-border/30 pb-20">
    <div class="container mx-auto px-4">
      <div class="text-center sm:text-right">
        <% if ENV['BUILDER_NAME'].present? && ENV['BUILDER_URL'].present? %>
          <%= link_to ENV['BUILDER_URL'], target: '_blank', rel: 'noopener', class: 'text-xs text-muted hover:text-primary transition-colors inline-flex items-center gap-1' do %>
            <span>由</span>
            <span class="font-medium"><%= ENV['BUILDER_NAME'] %></span>
            <span>提供支持</span>
            <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 z-50"
       data-controller="bottom-nav"
       data-bottom-nav-current-page-value="team">
    <div class="container mx-auto px-4">
      <div class="flex justify-around items-center h-16">
        <%= link_to (params[:profile_id].present? ? card_path(@profile.slug, profile_id: params[:profile_id]) : root_path), 
            class: "flex flex-col items-center justify-center flex-1 text-center transition-colors",
            data: { bottom_nav_target: "item", page: "card" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <span class="text-xs mt-1">首页</span>
        <% end %>
        
        <%= link_to teams_path(profile_id: params[:profile_id]), 
            class: "flex flex-col items-center justify-center flex-1 text-center transition-colors",
            data: { bottom_nav_target: "item", page: "team" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-xs mt-1">团队</span>
        <% end %>
        
        <%= link_to consultations_path(profile_id: params[:profile_id]), 
            class: "flex flex-col items-center justify-center flex-1 text-center transition-colors",
            data: { bottom_nav_target: "item", page: "consultation" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <span class="text-xs mt-1">咨询</span>
        <% end %>
      </div>
    </div>
  </nav>
</div>
